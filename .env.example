# ==============================================================================
# WANDERER OPS - Environment Configuration Example
# ==============================================================================
#
# Copy this file to .env and modify the values for your environment.
# Command: cp .env.example .env
#
# IMPORTANT: Never commit the .env file to version control!
#
# ==============================================================================

# ------------------------------------------------------------------------------
# DATABASE CONFIGURATION (Required)
# ------------------------------------------------------------------------------

# PostgreSQL connection URL
# Format: ecto://USER:PASSWORD@HOST:PORT/DATABASE
# For Docker Compose: use 'db' as the host (the service name)
# For external database: use your database server hostname/IP
DATABASE_URL=ecto://postgres:postgres@db:5432/wanderer_ops

# PostgreSQL credentials (used by the db container in docker-compose)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=wanderer_ops

# Database connection pool size
# Increase for high-traffic deployments (recommended: 10-20)
POOL_SIZE=10

# Enable IPv6 for database connections
# Set to "true" or "1" to enable
ECTO_IPV6=false

# ------------------------------------------------------------------------------
# APPLICATION SECRETS (Required - CHANGE THESE!)
# ------------------------------------------------------------------------------

# Secret key for signing cookies, sessions, and other encrypted data
# CRITICAL: Generate a unique 64+ character key for production!
#
# Generate with Elixir:
#   mix phx.gen.secret
#
# Generate with OpenSSL:
#   openssl rand -base64 64
#
# Example (DO NOT USE THIS VALUE - generate your own!):
SECRET_KEY_BASE=CHANGE_ME_GENERATE_YOUR_OWN_SECRET_KEY_BASE_WITH_mix_phx_gen_secret

# Erlang release cookie for distributed node communication
# Generate with: openssl rand -base64 32
RELEASE_COOKIE=CHANGE_ME_GENERATE_RELEASE_COOKIE

# ------------------------------------------------------------------------------
# WEB SERVER CONFIGURATION
# ------------------------------------------------------------------------------

# Enable Phoenix server mode
# Set to "true" for production deployments
PHX_SERVER=true

# Public hostname for URL generation
# Set to your actual domain name in production
# Examples: localhost, wanderer-ops.example.com
PHX_HOST=localhost

# HTTP port the application listens on
# Default: 4000
# Note: If you change this, also update the port mapping in docker-compose.yml
PORT=4000

# Full public URL of the web application
# Used for generating absolute URLs (emails, redirects, etc.)
WEB_APP_URL=http://localhost:4000

# ------------------------------------------------------------------------------
# ADMIN AUTHENTICATION (Required - CHANGE PASSWORD!)
# ------------------------------------------------------------------------------

# Admin panel username
WANDERER_OPS_ADMIN_USERNAME=admin

# Admin panel password
# CRITICAL: Set a strong password for production!
# Minimum recommended: 16 characters with mixed case, numbers, and symbols
WANDERER_OPS_ADMIN_PASSWORD=CHANGE_ME_SET_STRONG_PASSWORD

# ------------------------------------------------------------------------------
# API CONFIGURATION (Optional)
# ------------------------------------------------------------------------------

# API authentication token for external integrations
# Generate with: uuidgen or openssl rand -hex 32
# Leave empty to disable API token authentication
API_TOKEN=

# ------------------------------------------------------------------------------
# MONITORING (Optional)
# ------------------------------------------------------------------------------

# Disable Prometheus metrics exporter
# Set to "true" to disable metrics endpoint
PROMEX_DISABLED=true

# ------------------------------------------------------------------------------
# CLUSTERING (Optional - for distributed deployments)
# ------------------------------------------------------------------------------

# DNS query for automatic cluster node discovery
# Used with Kubernetes, Fly.io, or other orchestration platforms
# Example for Fly.io: wanderer-ops.internal
DNS_CLUSTER_QUERY=

# ------------------------------------------------------------------------------
# ERLANG/OTP CONFIGURATION (Advanced)
# ------------------------------------------------------------------------------

# Maximum number of ports (file descriptors) the Erlang VM can open
# Increase for high-concurrency deployments
ERL_MAX_PORTS=1024

# ------------------------------------------------------------------------------
# SSL/TLS CONFIGURATION (Optional - for HTTPS)
# ------------------------------------------------------------------------------

# Path to SSL certificate file
# SOME_APP_SSL_CERT_PATH=/path/to/cert.pem

# Path to SSL private key file
# SOME_APP_SSL_KEY_PATH=/path/to/key.pem
